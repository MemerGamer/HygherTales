{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HygherTales",
  "version": "0.0.1",
  "identifier": "com.hyghertales.app",
  "build": {
    "beforeDevCommand": "bun run dev:frontend",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build:frontend",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "HygherTales",
        "width": 800,
        "height": 600
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "HygherTales mod manager",
    "longDescription": "HygherTales manages mods and can optionally launch a legally installed game."
  },
  "plugins": {}
}
